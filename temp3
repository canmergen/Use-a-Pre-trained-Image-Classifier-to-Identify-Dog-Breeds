import cv2
import os

# Save resized PNGs in current working directory
png_paths = []
scale = 0.5  # reduce size to 50%; adjust as you wish

for i, img in enumerate(final_lower_imgs):
    if img is None:
        continue
    # Resize image
    h, w = img.shape[:2]
    resized = cv2.resize(img, (int(w * scale), int(h * scale)), interpolation=cv2.INTER_AREA)

    # Save resized image
    filename = f"temp_page_{i}.png"
    cv2.imwrite(filename, resized)
    png_paths.append(filename)
    print(f"Saved smaller image: {filename} ({resized.shape[1]}x{resized.shape[0]})")

# Delete the PNGs afterward
for path in png_paths:
    try:
        os.remove(path)
        print(f"Deleted: {path}")
    except Exception as e:
        print(f"Could not delete {path}: {e}")

# You can now open your working directory and see the PNGs.
