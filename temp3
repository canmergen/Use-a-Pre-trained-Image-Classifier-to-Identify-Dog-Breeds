import cv2
import os

# Save all numpy images in current working directory
png_paths = []
for i, img in enumerate(final_lower_imgs):
    if img is None:
        continue
    filename = f"temp_page_{i}.png"
    cv2.imwrite(filename, img)
    png_paths.append(filename)
    print(f"Saved: {filename}")

# You can now open your working directory and see the PNGs.
# Run your OCR or any processing here...

# Delete the PNGs afterward
for path in png_paths:
    try:
        os.remove(path)
        print(f"Deleted: {path}")
    except Exception as e:
        print(f"Could not delete {path}: {e}")